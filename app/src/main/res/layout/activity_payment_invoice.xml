<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context="com.omninos.gwappuser.activities.PaymentInvoiceActivity">


    <include android:id="@+id/bar"
        layout="@layout/profile_appbar"/>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bar"
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank You For Payment"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/black"
            android:text="Your payment has been processed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/black"
            android:text="Details of transactions are included below."/>
    </LinearLayout>

    <View
        android:id="@+id/firstView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/heading"
        android:layout_marginTop="@dimen/dp_20"
        android:background="#d3d3d3"/>


    <RelativeLayout
        android:id="@+id/invoice"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_below="@id/firstView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/dp_18"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invoice"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_18"
            android:layout_alignParentEnd="true"
            android:text="0000001"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/dp_4"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/total_amount"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_below="@id/invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/dp_18"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_18"
            android:layout_alignParentEnd="true"
            android:text="$400"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/dp_4"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/payment_type"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_below="@id/total_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/dp_18"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Type"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_18"
            android:layout_alignParentEnd="true"
            android:text="Credit Card"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/dp_4"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/Transaction_type"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_below="@id/payment_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/dp_18"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_18"
            android:layout_alignParentEnd="true"
            android:text="15:30"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/dp_4"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/Transaction_date"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_below="@id/Transaction_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/dp_18"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_18"
            android:layout_alignParentEnd="true"
            android:text="01-May-2018"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/dp_4"/>
    </RelativeLayout>


    <View
        android:id="@+id/SecView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/Transaction_date"
        android:layout_marginTop="@dimen/dp_20"
        android:background="#d3d3d3"/>

    <Button
        android:id="@+id/shareFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="Share feedback"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/SecView"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingStart="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_30"/>
</RelativeLayout>
