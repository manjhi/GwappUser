<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_130">

    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/frst"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_2"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@drawable/image_user"/>
        <TextView
            android:layout_marginTop="@dimen/dp_8"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andy Jack"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/sec"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_toEndOf="@id/frst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quality"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_12"/>
            <RatingBar
                android:scaleY="0.3"
                android:scaleX="0.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-17dp"
                android:layout_marginStart="-65dp"
                android:layout_marginEnd="-70dp"
                android:layout_marginBottom="-20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"/>
            <RatingBar
                android:scaleY="0.3"
                android:scaleX="0.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-17dp"
                android:layout_marginStart="-58dp"
                android:layout_marginEnd="-70dp"
                android:layout_marginBottom="-20dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/sp_10"
        android:id="@+id/thrd"
        android:layout_below="@id/sec"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_toEndOf="@id/frst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Response"/>
            <RatingBar
                android:scaleY="0.3"
                android:scaleX="0.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-17dp"
                android:layout_marginStart="-78dp"
                android:layout_marginEnd="-70dp"
                android:layout_marginBottom="-20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finishing"/>
            <RatingBar
                android:scaleY="0.3"
                android:scaleX="0.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-17dp"
                android:layout_marginStart="-78dp"
                android:layout_marginEnd="-70dp"
                android:layout_marginBottom="-20dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="@dimen/sp_10"
        android:id="@+id/fourth"
        android:layout_below="@id/thrd"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_toEndOf="@id/frst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="@dimen/dp_4"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/dp_12"
                android:drawableStart="@drawable/ic_maps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 min"
                android:textColor="#ed2424"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="@dimen/dp_4"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bookLater"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Book Later"
                android:textAllCaps="false"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="@dimen/dp_8"
                android:background="@drawable/reject_button"
                android:layout_height="@dimen/dp_30" />
            <Button
                android:id="@+id/book_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Book Now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:layout_marginEnd="@dimen/dp_8"
                android:background="@drawable/accept_button"
                android:layout_height="@dimen/dp_30" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/sp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_alignParentBottom="true"
        android:background="#d3d3d3"/>
</RelativeLayout>