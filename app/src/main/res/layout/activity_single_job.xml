<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context="com.omninos.gwappuser.activities.SingleJobActivity">

    <include android:id="@+id/bar"
        layout="@layout/app_bar"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_below="@id/bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/firstCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:layout_margin="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_20"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Bids"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="14"
                            android:textColor="@color/colorPrimary" />
                    </LinearLayout>

                    <View
                        android:id="@+id/firstView"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:layout_toEndOf="@id/first"
                        android:background="#d3d3d3" />

                    <LinearLayout
                        android:id="@+id/second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/sp_16"
                        android:layout_toEndOf="@id/firstView"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Avg Bid (USD)"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="$450"
                            android:textColor="@color/colorPrimary" />
                    </LinearLayout>

                    <View
                        android:id="@+id/SecondView"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/sp_16"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:layout_toEndOf="@id/second"
                        android:background="#d3d3d3" />

                    <LinearLayout
                        android:id="@+id/third"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/sp_16"
                        android:layout_toEndOf="@id/SecondView"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Project Budget"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="$250 - $750"
                            android:textColor="@color/colorPrimary" />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/secondCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/firstCard"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/imagedata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:gravity="center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_80"
                            android:src="@drawable/notify" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:text="$285-$854"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/textlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/sp_20"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:layout_toEndOf="@id/imagedata"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Build a android and ios app for young soccer Players"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_2"
                            android:layout_marginEnd="@dimen/dp_2"
                            android:maxLength="97"
                            android:text="Hi, i am looking for someone to develop a native mobile and android app for young soccer players, they can watch videos/instruction and learn from them" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="1 min ago"
                                android:textSize="@dimen/dp_10" />

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="-40dp"
                                android:layout_marginTop="-15dp"
                                android:layout_marginEnd="-70dp"
                                android:layout_marginBottom="-20dp"
                                android:scaleX="0.3"
                                android:scaleY="0.3" />

                            <TextView
                                android:id="@+id/toatlBid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/dp_4"
                                android:background="@drawable/green_ring_shape"
                                android:paddingStart="@dimen/dp_14"
                                android:paddingTop="@dimen/dp_4"
                                android:paddingEnd="@dimen/dp_14"
                                android:paddingBottom="@dimen/dp_4"
                                android:text="14"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/dp_12" />

                            <TextView
                                android:id="@+id/bidText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/dp_4"
                                android:layout_toStartOf="@id/toatlBid"
                                android:text="Total Bid"
                                android:textColor="@color/black"
                                android:textSize="@dimen/dp_12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@id/bidText"
                                android:text="(4.8)"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_12" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_200"
                        android:layout_below="@id/textlayout"
                        android:layout_marginStart="@dimen/sp_20"
                        android:layout_marginTop="@dimen/sp_20"
                        android:layout_marginEnd="@dimen/sp_20"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:background="@drawable/second_ring_shape"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/sp_20"
                            android:text="Skill Required"
                            android:textColor="@color/black" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/sp_20"
                            android:layout_marginEnd="@dimen/sp_20"
                            android:layout_marginBottom="@dimen/dp_10">

                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:visibility="gone"
                android:id="@+id/bid_on_this_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/secondCard"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:drawablePadding="@dimen/dp_4"
                android:background="@drawable/button_bg"
                android:drawableStart="@drawable/ic_bid"
                android:paddingStart="@dimen/dp_30"
                android:paddingEnd="@dimen/dp_30"
                android:layout_marginBottom="@dimen/sp_20"
                android:textColor="@color/white"
                android:text="bid on this project" />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
